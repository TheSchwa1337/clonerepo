# =============================================================================
# SCHWABOT ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# 
# COPY THIS FILE TO .env AND FILL IN YOUR ACTUAL VALUES
# NEVER COMMIT THE ACTUAL .env FILE TO VERSION CONTROL
#
# Usage:
#   cp env.example .env
#   nano .env  # Edit with your actual values
#
# =============================================================================

# =============================================================================
# EXCHANGE API CREDENTIALS (REQUIRED FOR TRADING)
# =============================================================================

# Binance Exchange
BINANCE_API_KEY=your_binance_public_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here

# Coinbase Exchange
COINBASE_API_KEY=your_coinbase_public_api_key_here
COINBASE_API_SECRET=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Mode (sandbox/live)
SCHWABOT_TRADING_MODE=sandbox
SCHWABOT_LIVE_TRADING_ENABLED=false

# Risk Management
SCHWABOT_MAX_POSITION_SIZE_PCT=10.0
SCHWABOT_MAX_TOTAL_EXPOSURE_PCT=30.0
SCHWABOT_STOP_LOSS_PCT=2.0
SCHWABOT_TAKE_PROFIT_PCT=5.0
SCHWABOT_MAX_DAILY_LOSS_USD=1000.0

# Trading Parameters
SCHWABOT_DEFAULT_SYMBOL=BTC/USDT
SCHWABOT_MIN_ORDER_SIZE_USD=10.0
SCHWABOT_MAX_ORDER_SIZE_USD=1000.0

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SCHWABOT_LOG_LEVEL=INFO
SCHWABOT_LOG_FILE=logs/schwabot.log
SCHWABOT_ENABLE_DEBUG_MODE=false

# Performance Settings
SCHWABOT_MAX_CONCURRENT_TRADES=5
SCHWABOT_PROCESSING_INTERVAL_MS=100

# Data Storage
SCHWABOT_DATA_DIR=data/
SCHWABOT_BACKUP_ENABLED=true

# =============================================================================
# NETWORK & SECURITY
# =============================================================================

# API Server Configuration
SCHWABOT_API_HOST=localhost
SCHWABOT_API_PORT=5000
SCHWABOT_API_SSL_ENABLED=false

# Security Settings
SCHWABOT_ENABLE_RATE_LIMITING=true
SCHWABOT_MAX_REQUESTS_PER_MINUTE=1000

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Email Alerts (Optional)
SCHWABOT_EMAIL_ENABLED=false
SCHWABOT_EMAIL_SMTP_SERVER=smtp.gmail.com
SCHWABOT_EMAIL_SMTP_PORT=587
SCHWABOT_EMAIL_USERNAME=your_email@gmail.com
SCHWABOT_EMAIL_PASSWORD=your_app_password_here

# =============================================================================
# EXTERNAL API KEYS (OPTIONAL)
# =============================================================================

# News API (for sentiment analysis)
NEWS_API_KEY=your_news_api_key_here

# CoinMarketCap API (for market data)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Mathematical Engine Settings
SCHWABOT_TENSOR_DEPTH=4
SCHWABOT_HASH_MEMORY_DEPTH=100
SCHWABOT_QUANTUM_DIMENSION=16
SCHWABOT_ENTROPY_THRESHOLD=0.7

# Strategy Parameters
SCHWABOT_DEFAULT_STRATEGY=balanced_growth
SCHWABOT_CONFIDENCE_THRESHOLD=0.7
SCHWABOT_PROFIT_SCORE_THRESHOLD=0.3

# Performance Optimization
SCHWABOT_ENABLE_GPU_ACCELERATION=true
SCHWABOT_CUDA_DEVICE_ID=0
SCHWABOT_ENABLE_MULTITHREADING=true
SCHWABOT_THREAD_POOL_SIZE=4 